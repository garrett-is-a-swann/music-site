#!/bin/bash

if [ $# -eq 1 ] # If there are ANY other command-line arguments, ALSO (in the background) launch `ng build` on watch-mode.
then
    echo '######## cd src ########'
    cd src
    echo '######## ng build ########'
    ng build --watch &
    echo '######## cd .. ########'
    cd ..
fi
echo '######## startup server ########'
PGUSER=admin \
    PGHOST=localhost \
    PGPASSWORD=secr3tp5wd \
    PGDATABASE=core \
    PGPORT=5432 \
    node server.js
